<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.oop_library.SupportController" spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;" stylesheets="@stylesSupport.css">

    <!-- Phần tiêu đề của form -->
    <VBox spacing="10" alignment="CENTER">
        <Text text="Support" style="-fx-fill: black;">
            <font>
                <Font size="24" />
            </font>
        </Text>
    </VBox>

    <!-- Thông tin hỗ trợ -->
    <VBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10;">
        <!-- Tiêu đề -->
        <Label text="Bạn đang cần hỗ trợ?" style="-fx-font-size: 16;" />

        <!-- Email -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="📧 Email:" style="-fx-font-weight: bold;" />
            <Label text="devlibraryuet@gmail.com" />
        </HBox>

        <!-- Hotline -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="📞 Hotline:" style="-fx-font-weight: bold;" />
            <Label text="024 3835 5921" />
        </HBox>

        <!-- Địa chỉ -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="📍 Địa chỉ:" style="-fx-font-weight: bold;" />
            <Label text="Số 2 Hùng Vương, Ngọc Hội, Ba Đình, Hà Nội" />
        </HBox>
    </VBox>

    <!-- Ghi chú -->
    <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
        <Label text="Hãy chọn danh mục. Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn" wrapText="true" style="-fx-font-size: 14; -fx-text-alignment: center;" />
    </VBox>
</VBox>
